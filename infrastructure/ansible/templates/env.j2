# AssureQai Environment File Template
# Used by Ansible for server configuration

# Application
NODE_ENV={{ environment }}
PORT=3000

# MongoDB
MONGO_ROOT_USER={{ mongo_root_user | default('admin') }}
MONGO_ROOT_PASSWORD={{ mongo_root_password }}
MONGODB_URI=mongodb://{{ mongo_root_user | default('admin') }}:{{ mongo_root_password }}@mongodb:27017/assureqai?authSource=admin

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD={{ redis_password }}

# JWT
JWT_SECRET={{ jwt_secret }}
JWT_EXPIRES_IN=24h

# AI Service
GEMINI_API_KEY={{ gemini_api_key }}

# SMTP
SMTP_HOST={{ smtp_host | default('smtp.sendgrid.net') }}
SMTP_PORT={{ smtp_port | default(587) }}
SMTP_USER={{ smtp_user | default('apikey') }}
SMTP_PASSWORD={{ smtp_password | default('') }}

# URLs
NEXT_PUBLIC_API_URL=https://{{ domain_name }}/api
CLIENT_PORTAL_URL=https://app.{{ domain_name }}
ADMIN_PORTAL_URL=https://admin.{{ domain_name }}

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
